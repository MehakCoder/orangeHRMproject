<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Grid Suite" parallel="tests" thread-count="2">

    <test name="Chrome Tests">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="testcases.Login_test"/>
            <class name="testcases.DashboardTest"/>
            <class name="testcases.AdminTest"/>
            <class name="testcases.PIMTest"/>
            <class name="testcases.LeaveTest"/>
            <class name="testcases.MyInfoTest"/>
        </classes>
    </test>

    <test name="Firefox Tests">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="testcases.Login_test"/>
            <class name="testcases.DashboardTest"/>
            <class name="testcases.AdminTest"/>
            <class name="testcases.PIMTest"/>
            <class name="testcases.LeaveTest"/>
            <class name="testcases.MyInfoTest"/>
        </classes>
    </test>

</suite>
